<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppKerst.Views.WensLijstPage"
             Title="WensLijstPage">
    <Grid RowDefinitions="*,Auto"
          Padding="12">

        <!-- LIST -->
        <CollectionView ItemsSource="{Binding WensLijst.WensCadeau}"
                        Grid.Row="0"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Frame Margin="0,6"
                           Padding="10"
                           CornerRadius="12"
                           HasShadow="True"
                           BackgroundColor="#1E1E1E">

                        <Grid ColumnDefinitions="80,*,Auto"
                              RowDefinitions="Auto,Auto,Auto">

                            <!-- IMAGE -->
                            <Image Source="{Binding ImageUrl}"
                                   HeightRequest="70"
                                   WidthRequest="70"
                                   Aspect="AspectFill"
                                   Grid.RowSpan="3"/>

                            <!-- TITLE -->
                            <Label Text="{Binding Titel}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="White"
                                   Grid.Column="1"
                                   Grid.Row="0"/>

                            <!-- WEBSITE -->
                            <Label Text="{Binding Website}"
                                   FontSize="12"
                                   TextColor="LightGray"
                                   Grid.Column="2"
                                   Grid.Row="0"
                                   LineBreakMode="TailTruncation"/>

                            <!-- DESCRIPTION -->
                            <Label Text="{Binding Beschrijving}"
                                   FontSize="12"
                                   TextColor="Gray"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   LineBreakMode="TailTruncation"/>

                            <!-- LABEL -->
                            <Label Text="Wens"
                                   FontSize="12"
                                   TextColor="LightGray"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   Grid.ColumnSpan="2"/>
                        </Grid>

                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BOTTOM BUTTON -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*"
              Margin="0,10">

            <Button Text="Nieuw"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="4"
                    Command="{Binding NieuwWensItemCommand}"/>
        </Grid>
    </Grid>
</ContentPage>