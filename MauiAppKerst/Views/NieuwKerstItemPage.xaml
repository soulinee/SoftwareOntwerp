<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppKerst.Views.NieuwKerstItemPage"
             Title="NieuwKerstItemPage">
    <VerticalStackLayout Padding="20" Spacing="12">
        <Entry Placeholder="BEELD URL" Text="{Binding ImageUrl}" />
        <Entry Placeholder="TITEL" Text="{Binding Titel}" />
        <Entry Placeholder="GESCHENK VOOR" Text="{Binding GeschenkVoorNaam}" />
        <Entry Placeholder="PRIJS" Keyboard="Numeric" Text="{Binding Prijs}" />
        <Entry Placeholder="OMSCHRIJVING" Text="{Binding Beschrijving}" />

        <Grid ColumnDefinitions="*,*"
              Margin="0,20">

            <Button Text="Annuleren"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding AnnuleerCommand}" />

            <Button Text="Bewaren"
                    Grid.Column="1"
                    BackgroundColor="Green"
                    TextColor="White"
                    Command="{Binding BewaarCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>