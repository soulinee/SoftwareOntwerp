<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppKerst.Views.KerstLijstPage"
             Title="KerstLijstPage">
    <Grid RowDefinitions="*,Auto"
          Padding="12">


        <CollectionView ItemsSource="{Binding KerstLijst.KerstCadeau}"
                            Grid.Row="0"
                            SelectionMode="None">
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                    <Frame Margin="0,6"
                           Padding="10"
                           CornerRadius="12"
                           HasShadow="True"
                           BackgroundColor="#1E1E1E">

                        <Grid ColumnDefinitions="80,*,Auto"
                              RowDefinitions="Auto,Auto,Auto">

                            <!-- IMAGE -->
                            <Image Source="{Binding ImageUrl}"
                                   HeightRequest="70"
                                   WidthRequest="70"
                                   Aspect="AspectFill"
                                   Grid.RowSpan="3"/>

                            <!-- TITLE -->
                            <Label Text="{Binding Titel}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="White"
                                   Grid.Column="1"/>

                            <!-- PRICE -->
                            <Label Text="{Binding Prijs, StringFormat='{}{0} euro'}"
                                   FontAttributes="Bold"
                                   TextColor="LightGray"
                                   Grid.Column="2"/>

                            <!-- DESCRIPTION -->
                            <Label Text="{Binding Beschrijving}"
                                   FontSize="12"
                                   TextColor="Gray"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="2"
                                   LineBreakMode="TailTruncation"/>
                            <!-- PERSOON -->
                            <Label Text="{Binding GeschenkVoor.Voornaam, StringFormat='Voor: {0}' }"
                           FontSize="12"
                           TextColor="LightGray"
                           Grid.Row="2"
                           Grid.Column="1"
                           Grid.ColumnSpan="2" />
                        </Grid>
                    </Frame>

                </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>



        <Grid Grid.Row="1"
              ColumnDefinitions="*,*"
              Margin="0,10">

            <Button Text="Personen"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="4"/>

            <Button Text="Nieuw"
                    Grid.Column="1"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="4"
                    Command="{Binding NieuwKerstItemCommand}"/>
        </Grid>


    </Grid>
</ContentPage>